<h1>Product Table Listing</h1>
<% if (allrecs.length > 0) {%>
    <table border=1>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Image</th>
            <th>Product Status</th>
            <th>Sale Price</th>
            <th>Starting City</th>
            <th>Destination City</th>

        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.product_id %></td>
            <td><%= recref.productname %></td>
            <td><%= recref.productimage %></td>
            <td><%= recref.productstatus %></td>
            <td><%= recref.saleprice %></td>
            <td><%= recref.startingcity %></td>
            <td><%= recref.destinationcity %></td>
            <td><a href='/product/<%= recref.product_id %>'> Details</a></td>
            <td><a href='/product/<%= recref.product_id %>/edit'>Edit</a></td>
            <td><a href='/product/<%= recref.product_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>

            </tr>
    <% }); %>
    </table>

    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
<p> <a href='/product/addrecord'>Add New</a> </p>
