<h1> Edit Sale</h1>
<form action="/saleorder/save" method="post">
   <input type="hidden" name="order_id" value="<%= rec.order_id %>" >
   <table>
<tr> <td> Customer ID: </td> <td> <input type="text" name="customer_id" value=<%= rec.customer_id %> required> </td> </tr>
<tr> <td> Sale Date: </td> <td> <input type="date" name="saledate" value=<%= rec.saledate %> required> </td> </tr>
<tr> <td> Customer Notes: </td> <td> <input type="text" name="customernotes" value=<%= rec.customernotes %> required> </td> </tr>
<tr> <td> Payment Status: </td> <td> <input type="text" name="paymentstatus" value=<%= rec.paymentstatus %> required> </td> </tr>
   </table>
   <button type="submit">Save</button>
</form>
