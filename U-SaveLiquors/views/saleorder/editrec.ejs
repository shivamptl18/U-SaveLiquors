<h1> Edit Sale</h1>
<form action="/saleorder/save" method="post">
   <input type="hidden" name="order_id" value="<%= rec.order_id %>" >
   <table>
		<tr> <td> Customer ID: </td> <td> <input type="text" name="customer_id" value=<%= rec.customer_id %> required> </td> </tr>
		<tr> <td> Sale Date: </td> <td> <input type="date" name="saledate" value="<%= rec.saledate.toISOString().split('T')[0]  %>" required> </td> </tr>
		<tr> <td> Customer Notes: </td> <td> <textarea name="customernotes" rows="10" cols="30"><%= rec.customernotes %> </textarea> </td> </tr>
		<tr> <td> Payment Status: </td> <td>
								<select  name="paymentstatus"  required>
									<option selected><%= rec.paymentstatus %></option>
									<option>Paid</option>
									<option>Unpaid</option>
									<option>Cancelled</option>
									<option>Pending</option>
								</select>
							</td> </tr>
   </table>
   <button type="submit">Save</button>
</form>
