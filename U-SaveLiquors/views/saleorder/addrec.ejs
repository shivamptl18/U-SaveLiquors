<h1>Add New Sale</h1>
<form action="/saleorder" method="post">
   <table>
		<tr> <td> Customer ID: </td> <td> <input type="text" name="customer_id" required> </td> </tr>
		<tr> <td> Sale Date: </td> <td> <input type="date" name="saledate" required> </td> </tr>
		<tr> <td> Customer Notes: </td> <td> <textarea name="customernotes" rows="10" cols="30"> Description </textarea> </td> </tr>
		<tr> <td> Payment Status: </td> <td> 
							<select  name="paymentstatus"  required>
									<option selected disabled>Choose Status</option>
									<option>Paid</option>
									<option>Unpaid</option>
									<option>Cancelled</option>
									<option>Pending</option>
							</select>
						
						
						
						</td> </tr>
   </table>
   <button type="submit">Save</button>
</form>
